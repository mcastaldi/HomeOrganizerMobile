<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="castaldini.homeorganizationmobile.AddRoomActivity"
    tools:showIn="@layout/app_bar_add_room">

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addRoomNameLabel"
        android:layout_alignBaseline="@+id/addRoomName"
        android:layout_alignBottom="@+id/addRoomName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/addRoomFloor"
        android:layout_alignBaseline="@+id/addRoomFloorLabel"
        android:layout_alignBottom="@+id/addRoomFloorLabel"
        android:layout_alignLeft="@+id/addRoomName"
        android:layout_alignStart="@+id/addRoomName" />

    <TextView
        android:text="Floor:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addRoomFloorLabel"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/addRoomName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add Room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addRoomFloor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/addRoomButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/addRoomName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
