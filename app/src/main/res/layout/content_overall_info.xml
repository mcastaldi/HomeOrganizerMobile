<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_overall_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="castaldini.homeorganizationmobile.OverallInfoActivity"
    tools:showIn="@layout/app_bar_overall_info">

    <TextView
        android:text="Rooms:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/roomCountLabel" />

    <TextView
        android:id="@+id/roomCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/roomCountLabel"
        android:layout_alignBottom="@+id/roomCountLabel"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/roomCountLabel"
        android:layout_toRightOf="@+id/roomCountLabel"
        android:text="filler" />

    <TextView
        android:text="Storages:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/storageCountLabel"
        android:layout_below="@+id/roomCountLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/storageCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/roomCount"
        android:layout_alignStart="@+id/roomCount"
        android:layout_alignTop="@+id/storageCountLabel"
        android:text="filler" />

    <TextView
        android:text="Items:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storageCountLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/itemCountLabel" />

    <TextView
        android:text="filler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/itemCountLabel"
        android:layout_alignLeft="@+id/storageCount"
        android:layout_alignStart="@+id/storageCount"
        android:id="@+id/itemCount" />

    <TextView
        android:text="Cost:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemCountLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:id="@+id/totalCostLabel" />

    <TextView
        android:text="filler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/totalCostLabel"
        android:layout_alignLeft="@+id/itemCount"
        android:layout_alignStart="@+id/itemCount"
        android:id="@+id/totalCost" />
</RelativeLayout>
