<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_storage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="castaldini.homeorganizationmobile.AddStorageActivity"
    tools:showIn="@layout/app_bar_add_storage">

    <TextView
        android:text="Select Room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/addStorageSelectRoomLabel" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addStorageSelectRoomLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/addStorageSelectRoom" />

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addStorageSelectRoom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:id="@+id/addStorageNameLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/addStorageSelectRoom"
        android:layout_toRightOf="@+id/addStorageNameLabel"
        android:layout_toEndOf="@+id/addStorageNameLabel"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:id="@+id/addStorageName" />

    <TextView
        android:text="Cost:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addStorageCostLabel"
        android:layout_alignBaseline="@+id/addStorageCost"
        android:layout_alignBottom="@+id/addStorageCost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/addStorageName"
        android:layout_alignRight="@+id/addStorageName"
        android:layout_alignEnd="@+id/addStorageName"
        android:layout_marginTop="14dp"
        android:id="@+id/addStorageCost" />

    <Button
        android:text="Add Storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addStorageCost"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/addStorageButton" />

</RelativeLayout>
